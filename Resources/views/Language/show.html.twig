{% extends 'FacebesSnippetBundle::layout.html.twig' %}

{% block pagesubtitle %} List Tags {% endblock %} 
{% block contenido %}
<h1>Language</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Syntax</th>                <td>{{ entity.syntax }}</td>        </tr>
        <tr>
            <th>Icon</th>                <td>{{ entity.icon }}</td>        </tr>
    </tbody>
</table>
{% endblock %}
{% block lateral %}
<ul class="record_actions">
    <li>
        <a href="{{ path('language') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('language_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('language_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
