{% extends 'FacebesSnippetBundle::layout.html.twig' %}

{% block pagesubtitle %} Language edit {% endblock %} 
{% block contenido %}

<form action="{{ path('language_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>
{% endblock %}
{% block lateral %}
<ul class="record_actions">
    <li>
        <a href="{{ path('language') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('language_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
