<h1>Snipper list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Createdat</th>
            <th>Updatedat</th>
	    <th>Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('snipper_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.createdAt|date('Y-m-d') }}</td>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
             <td>
	    {% for tag in entity.tags %}
             <a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.name }}</a>
	    {% endfor %}
            </td>
	    <td>
                <ul>
                    <li>
                        <a href="{{ path('snipper_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('snipper_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('snipper_new') }}">
            Create a new entry
        </a>
    </li>
    <li>
        <a href="{{ path('tag') }}">
            Listado de tags
        </a>
    </li>
</ul>
